<?xml version="1.0" encoding="UTF-8"?>  
<beans xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd 
    http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd ">  

    <!-- 应用名 -->
    <dubbo:application name="demo-dubbo-consumer" />  
    <!-- zookeeper注册中心 -->  
    <dubbo:registry group="demo-dubbo" protocol="zookeeper" address="192.168.0.127:2181" />  
    <!-- 向注册中心订阅服务 -->  
    <dubbo:reference id="demoService" interface="com.ltchen.demo.dubbo.api.service.DemoService" />  
    <dubbo:reference id="webHdfsService" interface="com.ltchen.demo.dubbo.api.service.WebHdfsService" />  

</beans>